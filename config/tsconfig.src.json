{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "target": "ES5",

        "declaration": true,
        "sourceMap": true,
        "inlineSources": true,
        "declarationMap": true,

        "rootDir": "../src",

        "importsNotUsedAsValues": "preserve",
        "isolatedModules": true,

        "jsx": "react",
        "baseUrl": "../src"
    },
    "include": ["../src"]
}
